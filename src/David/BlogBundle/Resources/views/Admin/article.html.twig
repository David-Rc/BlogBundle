{% extends 'base.html.twig' %}
{% block body %}
    <h1>{{ article.title }}</h1>
    {% if article.image is not null  %}
        <img src="/bundles/framework/images/{{ article.image.url }}" alt="{{ article.image.alt }}"/>
    {% endif %}
    <p>{{ article.content }}</p>
    <p>Publi√© par {{ article.author }} le {{ article.date | date('d/m/Y') }}</p>
    {% if comments is not null %}
        <ul>
            {% for item in comments %}
                <li><img class="img-thumbnail" src="/avatars/{{ item.author.avatar }}"/>{{ item.author.username }} : {{ item.content }} <button><a href="{{ path('blog_admin_delete_comment', {'id': item.id }) }}">X</a></button></li>
            {% endfor %}
        </ul>
    {% endif %}
    <button><a href="{{ path('blog_admin_delete_article', {'id': article.id }) }}">DELETE</a></button>
    <button><a href="{{ path('blog_admin_index') }}">Retour</a></button>
    {% endblock %}

{% block sidebar %}
    <h2>Modifier l'article : </h2>
    {{ form_start(form) }}
    {{ form_end(form) }}
{% endblock %}